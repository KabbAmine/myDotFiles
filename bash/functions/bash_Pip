# Last modification: 2015-08-17
# #############################

dotfiles_folder="/home/k-bag/.dotfiles/"

Pip() {
	# Personal pip:
		# - upg : Upgrade pip
		# - l   : List local & followed packages
		# - u   : Upgrade local & needed packages
			#	* package : List specified package(s)

	packages_file="$dotfiles_folder/install/pip/packages.txt"
	packages=$(cat $packages_file)

	case $1 in
		"upg" )
			sudo -H pip install --upgrade pip
			;;
		"u" )
			if [ -f $packages_file ]; then
				for p in $packages; do
					if [ ! -z $p ]; then
						sudo -H pip install --upgrade $p
					fi
				done
			fi
			;;
		"l" )
			for p in $packages; do
				echo -e $p
			done
			;;
		* )
			echo -e $green"Pip"
			echo -e "++++++++++++++\n"$white
			echo -e "Possible arguments are:"
			echo -e $red"upg"$white" \t Upgrade pip"
			echo -e $red"l"$white" \t List local & needed packages"
			echo -e $red"u"$white" \t Upgrade local & needed packages"
			;;
	esac
}
