# Ls
alias LsD='ls -F | grep "/$"'		   # Only directories
alias LsF='ls -F | grep -e ".*[^\/]$"' # Only files
alias LsH='ls -A | grep "^\."'		   # Only hidden files
alias ll='ls -l'

# Misc
alias Aard2='java -Dslobber.browse -jar ~/Scripts/aard2/aard2-web-0.7.jar ~/Scripts/aard2/*.slob'
alias zeal='zeal --style=gtk+'
alias V='vim'
alias G='gvim'
alias Size='df -h'
alias RelB='source ~/.bashrc'
alias Watch='watch -t --differences '
alias Weather='curl wttr.in/novoazovsk'
# Vim & gvim vanilla
alias Vv='vim -Nu ~/.vimVanilla/vimrc'
