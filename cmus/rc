# Modification: 2016-07-05

# Default library view mode
set aaa_mode=all
# Dont stop after finishing a song
set continue=true
# Repeat all tracks
set repeat=true
# set shuffle=true
# Play library bu default instead of playlist
set play_library=true
set show_current_bitrate=true
set mouse=true

set status_display_program=~/.cmus/cmus-status-display

set format_current=%a - %t%= %2n. %l [%y]
set format_trackwin=%2n. %t%= %g %8d
set format_playlist=%-15%A %-20l %2n. %t%= [%y] %-15%g %6d
set format_treewin=  + %-30l [%y]

# colorscheme yowish

# More blueish
set color_win_cur=blue
set color_win_cur_sel_bg=blue
set color_win_cur_sel_fg=white
set color_win_inactive_cur_sel_fg=blue
